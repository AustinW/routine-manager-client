<div class="modal fade" id="athleteEditModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title tertiaryHeading">{{ model.fullName }}</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label for="first_name" class="col-sm-3 control-label">First name</label>
            <div class="col-sm-9">
              {{ input value=model.first_name class="form-control"}}
            </div>
          </div>
          <div class="form-group">
            <label for="last_name" class="col-sm-3 control-label">Last name</label>
            <div class="col-sm-9">
              {{ input value=model.last_name class="form-control"}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Remember me
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <button type="submit" class="btn btn-default">Sign in</button>
            </div>
          </div>
        </form>
      </div>    

      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Edit {{ model.fullName }}</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->